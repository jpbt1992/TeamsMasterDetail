@using TeamsMasterDetail.Domain.Entities;
@using TeamsMasterDetail.Application.Extensions;
@using TeamsMasterDetail.Application.Controllers;

@model Member

<h2>Insert New Member</h2>

<form method="post">
    <input type="hidden" asp-for="TeamId" />

    <table border="1" cellpadding="10">
        <tr>
            <td>Nome :</td>
            <td><input type="text" asp-for="Name" /></td>
        </tr>
        <tr>
            <td>Email :</td>
            <td><input type="text" asp-for="Email" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit"
                       value="Salva"
                       asp-controller="@typeof(MemberController).GetControllerName()"
                       asp-action="@nameof(MemberController.InsertSave)"
                       asp-route-teamId="@Model.TeamId" />

                <input type="submit"
                       value="Cancela"
                       asp-controller="@typeof(MemberController).GetControllerName()"
                       asp-action="@nameof(MemberController.CancelEntry)"
                       asp-route-teamId="@Model.TeamId" />
            </td>
        </tr>
    </table>
</form>